<%= render 'nav' %>
<%= render 'flash' %>

<h1>Songbase Admin</h1>

<table>
  <tbody>
    <tr>
      <%= link_to 'New Song', new_song_path %>
    </tr>

    <%= render partial: 'songs_to_check', locals: {songs: @songs_to_check} if super_admin %>

    <% @songs.each do |song| %>
      <tr>
        <td><%= song[:title] %></td>
        <td><%= link_to 'Edit', edit_song_path(song[:model]) %></td>
        <% if super_admin %>
          <td><%= link_to 'Remove', song[:model], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
        <td><div class="last_edited"><%= song[:model][:last_editor] || 'System' %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>